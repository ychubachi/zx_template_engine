<h1>Listing placeholders</h1>

<table>
  <tr>
    <th>Key</th>
    <th>Value</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @placeholders.each do |placeholder| %>
  <tr>
    <td><%= placeholder.key %></td>
    <td><%= placeholder.value %></td>
    <td><%= link_to 'Show', placeholder %></td>
    <td><%= link_to 'Edit', edit_placeholder_path(placeholder) %></td>
    <td><%= link_to 'Destroy', placeholder, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

