<h1>Listing templates</h1>

<table>
  <tr>
    <th>Filename</th>
    <th>Zip File Path</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @templates.each do |template| %>
  <tr>
    <td><%= template.filename %></td>
    <td><%= template.zip_file_path %></td>
    <td><%= link_to 'Show', template %></td>
    <td><%= link_to 'Edit', edit_template_path(template) %></td>
    <td><%= link_to 'Destroy', template, confirm: 'Are you sure?', method: :delete %></td>
    <td><%= link_to 'Replace', replace_template_path(template) %></td>
    <td><%= link_to 'Placeholders', template_placeholders_path(template) %></td>
    <td><%= link_to 'Instances', template_instances_path(template) %></td>
  </tr>
<% end %>
</table>

