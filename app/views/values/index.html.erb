<h1>Listing values</h1>

<table>
  <tr>
    <th>Instance</th>
    <th>Placeholder</th>
    <th>Value</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @values.each do |value| %>
  <tr>
    <td><%= value.instance_id %></td>
    <td><%= value.placeholder.key %></td>
    <td><%= value.value %></td>
    <td><%= link_to 'Show', template_instance_value_path(@template, @instance, value) %></td>
    <td><%= link_to 'Edit', edit_template_instance_value_path(@template, @instance, value) %></td>
    <td><%= link_to 'Destroy', template_instance_value_path(@template, @instance, value),
	    confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Value', new_template_instance_value_path(@template, @instance) %>
