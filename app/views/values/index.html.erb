<h1><%= t 'view.value.index' %></h1>

<%= form_for @instance, url: template_instance_path(@template, @instance) do |instance_form| %>
  <table>
    <tr>
      <th><%= t 'activerecord.attributes.value.key' %></th>
      <th><%= t 'activerecord.attributes.value.value' %></th>
    </tr>

    <% @values.each do |value| %>
      <%= instance_form.fields_for :values, value do |value_fields| %>
	<tr>
	  <td><%= strip_tags value.placeholder.key %></td>
	  <td><%= value_fields.text_field :value %> </td>
	</tr>
      <% end %>
    <% end %>
  </table>
  <%= instance_form.submit %>
<%end %>

<br />

<%= link_to t('view.template.index'), templates_path %>|
<%= link_to t('view.instance.index'), template_instances_path(@template) %>|
<%= link_to t('view.instance.generate'), generate_template_instance_path(@template, @instance) %>
